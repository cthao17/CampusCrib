<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ED3C3C">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="37dp"
        android:text="CampusCrib"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="134dp"
        android:layout_height="76dp"
        android:text="Join"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:hint=" Wisc Email"
        android:inputType="text"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="232dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:hint=" Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="127dp"
        android:layout_height="58dp"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="508dp" />

    <EditText
        android:id="@+id/repasswordEditText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:hint=" Re-enter Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="421dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Got Loggin?"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="606dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Our Community"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="695dp" />

</androidx.constraintlayout.widget.ConstraintLayout>